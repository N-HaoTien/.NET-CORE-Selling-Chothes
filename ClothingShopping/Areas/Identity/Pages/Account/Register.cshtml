@page
@model RegisterModel
@{
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
    ViewData["Title"] = "Register";
}
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>@ViewData["Title"]</h2>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="group-input">
                            <label for="username">Email address *</label>
                            <input type="text" asp-for="Input.Email" id="username" autocomplete="username" aria-required="true">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label for="username">Username*</label>
                            <input type="text" asp-for="Input.Name" id="username" autocomplete="username" aria-required="true">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label for="pass">Password *</label>
                            <input asp-for="Input.Password" type="password" aria-required="true" id="pass">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>

                        </div>
                        <div class="group-input">
                            <label for="con-pass">Confirm Password *</label>
                            <input asp-for="Input.ConfirmPassword" type="password" id="con-pass">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                        </div>
                        <button type="submit" class="site-btn register-btn">REGISTER</button>
                    </form>
                    <div class="switch-login">
                        <a href="~/Identity/Account/Login" class="or-login">Or Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
