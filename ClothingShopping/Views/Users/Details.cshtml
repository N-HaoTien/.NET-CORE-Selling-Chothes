@{
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";

}
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Information</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Login</h2>
                    <form asp-controller="Users" asp-action="Details" asp-route-userId="@Model.UserId" method="post">
                        <div class="group-input">
                            <label for="username">Name *</label>
                            <input asp-for="Name" autocomplete="Name" aria-required="true" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label for="pass">Email *</label>
                            <input asp-for="Email" readonly class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label for="pass">Address *</label>
                            <input asp-for="Address" class="form-control" aria-required="true" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label asp-for="PhoneNumber">PhoneNumber *</label>
                            <input asp-for="PhoneNumber" type="tel" data-val="true" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <button type="submit" class="site-btn login-btn">Update Information</button>
                    </form>
                    @*<div class="switch-login">
                        <a href="@Url.Action("ChangePassword","Users",new{userId = Model.UserId})" class="or-login">Change Password</a>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
