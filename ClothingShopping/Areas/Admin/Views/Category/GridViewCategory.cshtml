@model IEnumerable<ClothingShopping.Models.Category>
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    var url = "/Category/AddorUpdate/id=?";
}
<div class="control-section">
    <ejs-grid id="Grid" dataSource="@Model" allowPaging="true">
        <e-grid-pagesettings pageCount="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="Name" headerText="Category Name" width="150"></e-grid-column>
            <e-grid-column field="Image" headerText="Image" width="130"></e-grid-column>
            <e-grid-column field="Description" headerText="Description" width="120"></e-grid-column>
            <e-grid-column headerText="Status" template="#StatusCategory" width="140"></e-grid-column>
            <e-grid-column headerText="Action" template="#ActionCategory" width="140"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>

</div>
<a onclick="ShowInPopup('https://localhost:7104/Category/AddorUpdate?id=9','Update Category')" class="btn btn-info">Edit</a>

<script id="StatusCategory" type="text/x-template">
    ${if(Status)}
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox"id="${Id}" checked onclick="ChangeStatus(${Id})">
        </div>
    ${else}
        <div class="form-check form-switch">
          <input class="form-check-input" id="${Id}" type="checkbox" onclick="ChangeStatus(${Id})">
        </div>
    ${/if}
</script>

<script id="ActionCategory" type="text/x-template">
    <div>
        <a onclick="ShowInPopup('https://localhost:7104/Category/AddorUpdate?id=9','Update Category')" class="btn btn-info">Edit</a>

    <a>Xóa</a>
    </div>

</script>