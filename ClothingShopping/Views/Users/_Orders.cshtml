@model OrderOfUserViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    Layout = null;

}
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Address </th>
                                <th>Phone </th>
                                <th>CreatedDate</th>
                                <th class="p-name">ReceivedDate</th>
                                <th>Status Bill</th>
                                <th>Total</th>
                                <th><i class="ti-close"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Orders)
                            {
                                <tr class="GetProductId">
                                    <td class="cart-title first-row">
                                        <h5>@Model.Name</h5>
                                    </td>
                                    <td class="cart-title first-row">
                                        <h5>@Model.Address</h5>
                                    </td>
                                    <td class="cart-title first-row">
                                        <h5>@Model.PhoneNumber</h5>
                                    </td>
                                    <td class="cart-title first-row">
                                        <h5>@item.CreatedDate.ToString("dd/MM/yyyy")</h5>
                                    </td>
                                    <td class="cart-title first-row">
                                        <h5>@(item.CreatedDate.AddDays(3).ToString("dd/MM/yyyy"))</h5>
                                    </td>
                                    <td class="p-price first-row">@(item.IsPayBill ? "Paid Bill Success" : "Hasn't been paid")</td>
                                    <td class="total-price first-row">@String.Format(info, "{0:c}", item.Total)</td>
                                    <td class="close-td first-row"><div onclick="ShowPopupOrderItems(@item.Id)"><i class="ti-close"></i></div></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="cart-buttons">
                            <a href="@Url.Action("Shopping","Home")" class="primary-btn continue-shop">Continue shopping</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>