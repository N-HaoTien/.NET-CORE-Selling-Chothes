@model List<UsertoRoleViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(FormMethod.Post))
{
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            @Html.HiddenFor(item => @Model[i].RoleId)
            @Html.HiddenFor(item => @Model[i].RoleName)
            @Html.CheckBoxFor(m => @Model[i].IsCheck)
            <label class="form-check-label" style="color:yellow" asp-for="@Model[i].IsCheck">
                @Model[i].RoleName
            </label>
        </div>
    }
    <button type="submit" class="btn btn-success">Cập Nhật </button>
}